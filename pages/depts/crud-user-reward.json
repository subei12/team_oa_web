{
  "type": "page",
  "title": "列表",
  "remark": null,
  "name": "page-demo",
  "toolbar": [
    
  ],
  "body": [
    {
      "type": "crud",
      "name": "sample",
      "api": "/api/users",
      "messages": {
        "fetchSuccess": "请求成功，使用请求的msg覆盖消息"
      },
      "filter": {
        "title": "",
        "mode": "inline",
        "wrapWithPanel": false,
        "submitText": "",
        "controls": [
          {
            "type": "text",
            "name": "username",
            "label": "username",
            "placeholder": "username(同QQ号)",
            "clearable": true
          },
          {
            "type": "text",
            "name": "hlxUserId",
            "label": "社区用户ID",
            "placeholder": "葫芦侠（社区）用户ID",
            "clearable": true
          },
          {
            "name": "deptId",
            "label": "选择团队",
            "type": "select",
            "searchable": true,
            "unique": true,
            "source": "get:/api/depts"
          },
          {
            "type": "submit",
            "label": "搜索"
          }
        ],
        "className": "m-b-sm"
      },
      "bulkActions": [
        
      ],
      "columns": [
        {
          "name": "username",
          "label": "userName",
          "sortable": true
        },
        {
          "name": "createTime",
          "label": "createDate",
          "sortable": true
        },
        {
          "name": "hlxUserId",
          "label": "社区用户ID",
          "sortable": true
        },
        {
          "name": "hlxUserNick",
          "label": "社区用户昵称(不准)",
          "sortable": true
        },
        {
          "name": "qq",
          "label": "绑定QQ",
          "sortable": true
        },
        {
          "name": "deptName",
          "label": "所属团队",
          "sortable": true
        },
        {
          "name": "roleNames",
          "label": "角色",
          "sortable": true
        },
        {
          "name": "integral",
          "label": "剩余积分",
          "sortable": true
        },
        {
          "type": "operation",
          "label": "操作",
          "width": "",
          "buttons": [
            {
              "type": "button-group",
              "buttons": [
                {
                  "type": "button",
                  "label": "自定义奖励",
                  "level": "primary",
                  "actionType": "dialog",
                  "dialog": {
                    "title": "葫芦会赠送到当前用户最新的回复上，请确认此回复不能在意见版块、所在帖子不能被锁。",
                    "actions": [
                      {
                        "label": "取消",
                        "actionType": "close",
                        "type": "button"
                      },
                      {
                        "label": "确认",
                        "actionType": "confirm",
                        "type": "button",
                        "level": "primary"
                      }
                    ],
                    "body": {
                      "type": "form",
                      "api": "put:/api/user/reward/$id",
                      "title": "常规模式",
                      "mode": "normal",
                      "controls": [
                        {
                          "type": "input-text",
                          "name": "source",
                          "label": "奖励数量，需为正整数。",
                          "required": true
                        },
                        {
                          "type": "divider"
                        },
                        {
                          "type": "input-text",
                          "name": "text",
                          "label": "奖励原因（赠送葫芦时通知）。",
                          "required": true
                        }
                      ]
                    }
                  }
                }
              ]
            }
          ],
          "placeholder": "-",
          "fixed": "right"
        }
      ],
      "affixHeader": true,
      "columnsTogglable": "auto",
      "placeholder": "暂无数据",
      "tableClassName": "table-db table-striped",
      "headerClassName": "crud-table-header",
      "footerClassName": "crud-table-footer",
      "toolbarClassName": "crud-table-toolbar",
      "combineNum": 0,
      "bodyClassName": "panel-default"
    }
  ]
}
