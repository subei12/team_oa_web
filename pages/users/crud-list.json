{
  "type": "page",
  "title": "列表",
  "remark": null,
  "name": "page-demo",
  "toolbar": [
    {
      "type": "button",
      "actionType": "link",
      "link": "/users/crud/new",
      "label": "新增",
      "primary": true
    }
  ],
  "body": [
    {
      "type": "crud",
      "name": "sample",
      "api": "/api/users",
      "messages": {
        "fetchSuccess": "请求成功，使用请求的msg覆盖消息"
      },
      "filter": {
        "title": "",
        "mode": "inline",
        "wrapWithPanel": false,
        "submitText": "",
        "controls": [
          {
            "type": "text",
            "name": "username",
            "label": "username",
            "placeholder": "username(同QQ号)",
            "clearable": true
          },
          {
            "type": "text",
            "name": "hlxUserId",
            "label": "社区用户ID",
            "placeholder": "葫芦侠（社区）用户ID",
            "clearable": true
          },
          {
            "name": "deptId",
            "label": "选择团队",
            "type": "select",
            "searchable": true,
            "unique": true,
            "source": "get:/api/depts"
          },
          {
            "type": "submit",
            "label": "搜索"
          }
        ],
        "className": "m-b-sm"
      },
      "bulkActions": [
        {
          "label": "批量修改",
          "type": "button",
          "actionType": "dialog",
          "level": "primary",
          "dialog": {
            "title": "批量编辑",
            "name": "sample-bulk-edit",
            "body": {
              "type": "form",
              "api": "/api/sample/bulkUpdate2",
              "controls": [
                {
                  "type": "text",
                  "name": "engine",
                  "label": "Engine"
                }
              ]
            }
          }
        },
        {
          "label": "批量删除",
          "type": "button",
          "level": "danger",
          "actionType": "ajax",
          "api": "delete:/api/user/$ids",
          "confirmText": "确定要批量删除?"
        }
      ],
      "columns": [
        {
          "name": "username",
          "label": "userName",
          "sortable": true
        },
        {
          "name": "createTime",
          "label": "createDate",
          "sortable": true
        },
        {
          "name": "hlxUserId",
          "label": "社区用户ID",
          "sortable": true
        },
        {
          "name": "hlxUserNick",
          "label": "社区用户昵称(不准)",
          "sortable": true
        },
        {
          "name": "qq",
          "label": "绑定QQ",
          "sortable": true
        },
        {
          "name": "deptName",
          "label": "所属团队",
          "sortable": true
        },
        {
          "name": "roleNames",
          "label": "角色",
          "sortable": true
        },
        {
          "name": "integral",
          "label": "剩余积分",
          "sortable": true
        },
        {
          "type": "operation",
          "label": "操作",
          "width": "",
          "buttons": [
            {
              "type": "button-group",
              "buttons": [
                {
                  "type": "button",
                  "label": "查看",
                  "level": "primary",
                  "actionType": "link",
                  "link": "/users/crud/${id}"
                },
                {
                  "type": "button",
                  "label": "修改",
                  "level": "info",
                  "actionType": "link",
                  "link": "/users/crud/${id}/edit"
                },
                {
                  "type": "button",
                  "label": "角色",
                  "level": "primary",
                  "actionType": "dialog",
                  "dialog": {
                    "title": "在弹框中的表单",
                    "actions": [
                      {
                        "label": "取消",
                        "actionType": "close",
                        "type": "button"
                      },
                      {
                        "label": "确认",
                        "actionType": "confirm",
                        "type": "button",
                        "level": "primary"
                      }
                    ],
                    "body": {
                      "type": "form",
                      "api": "put:/api/user/role/$id",
                      "title": "常规模式",
                      "mode": "normal",
                      "controls": [
                        {
                          "type": "checkboxes",
                          "label": "选择角色",
                          "name": "roles",
                          "options": [
                            {
                              "label": "超级管理员",
                              "value": "superAdmin"
                            },
                            {
                              "label": "管理员",
                              "value": "admin"
                            },
                            {
                              "label": "开发者",
                              "value": "dev"
                            }
                          ],
                          "className": "",
                          "source": "/api/role",
                          "labelClassName": "",
                          "inputClassName": "",
                          "mode": "",
                          "joinValues": true
                        }
                      ]
                    }
                  }
                },
                {
                  "type": "button",
                  "label": "删除",
                  "level": "danger",
                  "actionType": "ajax",
                  "confirmText": "您确认要删除?",
                  "api": "delete:/api/user/$id"
                }
              ]
            }
          ],
          "placeholder": "-",
          "fixed": "right"
        }
      ],
      "affixHeader": true,
      "columnsTogglable": "auto",
      "placeholder": "暂无数据",
      "tableClassName": "table-db table-striped",
      "headerClassName": "crud-table-header",
      "footerClassName": "crud-table-footer",
      "toolbarClassName": "crud-table-toolbar",
      "combineNum": 0,
      "bodyClassName": "panel-default"
    }
  ]
}
