{
  "type": "page",
  "title": "角色管理",
  "remark": null,
  "name": "page-demo",
  "toolbar": [
    {
      "type": "button",
      "actionType": "link",
      "link": "/setting/roles/crud/new",
      "label": "新增",
      "primary": true
    }
  ],
  "body": [
    {
      "type": "crud",
      "name": "sample",
      "api": "/api/roles",
      "messages": {
        "fetchSuccess": "请求成功，使用请求的msg覆盖消息"
      },
      "filter": {
        "title": "",
        "mode": "inline",
        "wrapWithPanel": false,
        "submitText": "",
        "controls": [
        ],
        "className": "m-b-sm"
      },
      "bulkActions": [
        {
          "label": "批量删除",
          "type": "button",
          "level": "danger",
          "actionType": "ajax",
          "api": "delete:/api/role/$ids",
          "confirmText": "确定要批量删除?"
        }
      ],
      "columns": [
        {
          "name": "name",
          "label": "name",
          "sortable": true
        },
        {
          "name": "description",
          "label": "角色描述",
          "sortable": true
        },
        {
          "name": "level",
          "label": "角色等级",
          "sortable": true
        },
        {
          "type": "operation",
          "label": "操作",
          "width": "",
          "buttons": [
            {
              "type": "button-group",
              "buttons": [
                {
                  "type": "button",
                  "label": "查看",
                  "level": "primary",
                  "actionType": "link",
                  "link": "/setting/roles/crud/${id}"
                },
                {
                  "type": "button",
                  "label": "修改",
                  "level": "info",
                  "actionType": "link",
                  "link": "/setting/roles/crud/${id}/edit"
                },
                {
                  "type": "button",
                  "label": "删除",
                  "level": "danger",
                  "actionType": "ajax",
                  "confirmText": "您确认要删除?",
                  "api": "delete:/api/role/$id"
                }
              ]
            }
          ],
          "placeholder": "-",
          "fixed": "right"
        }
      ],
      "affixHeader": true,
      "columnsTogglable": "auto",
      "placeholder": "暂无数据",
      "tableClassName": "table-db table-striped",
      "headerClassName": "crud-table-header",
      "footerClassName": "crud-table-footer",
      "toolbarClassName": "crud-table-toolbar",
      "combineNum": 0,
      "bodyClassName": "panel-default"
    }
  ]
}
